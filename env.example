# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_APP_ID=your_app_id_here
GITHUB_PRIVATE_KEY_PATH=path/to/private-key.pem

# Byam LLM Configuration
BYAM_ENDPOINT=http://localhost:8080/api/byam
BYAM_API_KEY=your_byam_api_key_here
BYAM_MODEL=gpt-4
BYAM_TIMEOUT=30000

# Build Configuration
BUILD_TIMEOUT=300000
BUILD_MAX_RETRIES=3
BUILD_TOOLS_PATH=/usr/local/bin
JAVA_HOME=/usr/lib/jvm/java-11-openjdk

# Repository Configuration
TEMP_DIR=/tmp/dependafix
CLONE_DEPTH=1
CHECKOUT_TIMEOUT=60000

# Validation Configuration
TEST_FAILURE_THRESHOLD=0.2
CRITICAL_TEST_FAILURE_THRESHOLD=0.05
VALIDATION_TIMEOUT=600000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/dependafix.log

# Development Configuration
NODE_ENV=development
PORT=3000
MOCK_MODE=false
MOCK_SERVER_PORT=3001

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/dependafix
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=* 