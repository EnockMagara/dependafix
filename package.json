{
  "name": "breaking-change-detector",
  "version": "1.0.0",
  "description": "Automated breaking change detection and branch creation for dependency updates",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha test/unit/**/*.test.js --recursive",
    "test:integration": "mocha test/integration/**/*.test.js --recursive --timeout 10000",
    "test:watch": "mocha test/**/*.test.js --recursive --watch",
    "test:coverage": "nyc npm run test",
    "test:breaking-changes": "node test-breaking-changes.js",
    "test:mock-webhook": "node test/mock/webhook-simulator.js",
    "lint": "eslint src/ test/ --ext .js",
    "lint:fix": "eslint src/ test/ --ext .js --fix",
    "format": "prettier --write src/ test/",
    "validate": "npm run lint && npm run test",
    "setup": "npm install && npm run validate",
    "mock:server": "node test/mock/mock-server.js",
    "demo": "node demo.js",
    "demo:breaking-changes": "npm run mock:server & sleep 2 && npm run test:mock-webhook"
  },
  "keywords": [
    "breaking-changes",
    "dependency-detection",
    "automated-branching",
    "github-bot",
    "probot"
  ],
  "author": "Breaking Change Detector Team",
  "license": "MIT",
  "dependencies": {
    "probot": "^12.3.1",
    "axios": "^1.6.0",
    "simple-git": "^3.20.0",
    "fs-extra": "^11.1.1",
    "xml2js": "^0.6.2",
    "semver": "^7.5.4",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "sinon": "^17.0.1",
    "nyc": "^15.1.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "nock": "^13.3.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/breaking-change-detector.git"
  }
}
